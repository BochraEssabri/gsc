	<artifactId>gestion-stations-carburant-rest</artifactId>
	<packaging>pom</packaging>

	<modules>
		<module>gestion-stations-carburant-rest-jersey</module>
	</modules>


	<build>
		<!-- Pour tansformer les variables maven vers le fichier -->
		<!-- ressources/project.properties -->
		<!-- utile pour rÃ©cuperer la version ou le chemin racine du projet -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/project.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/project.properties</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/</directory>
				<includes>
					<include>webapp/**/*</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>